mixin video(video)
    a(href=`videos/${video.id}`).video-mixin
        div.video-mixin__thumbnail
            img(src=video.thumbnailUrl, crossorigin)
        div.video-mixin__data
            div.video-mixin__avatar
                if !video.owner.avatarUrl
                    div.avatar-base.avatar--small
                        span=video.owner.name[0]
                else
                    img(src=video.owner.avatarUrl, crossorigin).avatar--small
            div.video-mixin__text
                div.video-mixin__title
                    span=video.title
                div.video-mixin__meta
                    span #{video.owner.name} âˆ™ 
                    if video.meta.views === 1
                        span #{video.meta.views} view
                    else 
                        span #{video.meta.views} views